<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>詳細</th>
      <th>期限</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td class = "task_list" ><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status_i18n %></td>
        <td><%= task.priority_i18n %></td>
        <td>
          <% task.labels.each do |label| %>
            <%= label.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

